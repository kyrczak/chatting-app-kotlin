<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@android:color/darker_gray">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:paddingLeft="15dp"
            android:id="@+id/emailText" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Email"
            android:background="@drawable/rounded_edittext"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:ems="10"
            android:id="@+id/passwordText"
            app:layout_constraintEnd_toEndOf="@+id/emailText" app:layout_constraintStart_toStartOf="@+id/emailText"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/emailText"
            android:hint="Password" android:background="@drawable/rounded_edittext"/>
    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_button" android:layout_marginTop="8dp"
            android:background="@drawable/rounded_button"
            app:layout_constraintTop_toBottomOf="@+id/passwordText" app:layout_constraintEnd_toEndOf="@+id/passwordText"
            app:layout_constraintStart_toStartOf="@+id/passwordText"/>
    <TextView
            android:text="Back to registration"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_to_register_text"
            app:layout_constraintTop_toBottomOf="@+id/login_button" app:layout_constraintEnd_toEndOf="@+id/login_button"
            app:layout_constraintStart_toStartOf="@+id/login_button" android:layout_marginTop="8dp"/>
</android.support.constraint.ConstraintLayout>